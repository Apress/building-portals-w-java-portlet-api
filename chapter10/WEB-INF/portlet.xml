<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd" version="1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">
    <portlet>
        <description>Search Portlet</description>

        <portlet-name>SearchPortlet</portlet-name>

        <display-name>Search Portlet</display-name>

        <portlet-class>com.portalbook.portlets.SearchPortlet</portlet-class>
        
        <init-param>
            <description>Location of the Lucene index on the local file system</description>
            <name>indexPath</name>
            <value>c:\temp\lucene</value>
        
        </init-param>

        <expiration-cache>0</expiration-cache>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>

        <supported-locale>en</supported-locale>        

        <portlet-info>
            <title>Search Portlet</title>
            <short-title>Search</short-title>
            <keywords>Search,Lucene</keywords>
        </portlet-info>

    </portlet>
 </portlet-app>
