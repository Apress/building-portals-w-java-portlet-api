<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd" version="1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">
    <portlet>
        <description>Preferences Validation Portlet</description>

        <portlet-name>PreferencesValidationPortlet</portlet-name>

        <display-name>Preferences Validation Portlet</display-name>

        <portlet-class>com.portalbook.portlets.PreferencesValidationPortlet</portlet-class>

        <expiration-cache>0</expiration-cache>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>

        <supported-locale>en</supported-locale>        

        <portlet-info>
            <title>Preferences Validation Portlet</title>
            <short-title>Validation</short-title>
            <keywords>Preferences,Validation</keywords>
        </portlet-info>

        <portlet-preferences>
            <preferences-validator>com.portalbook.portlets.ExamplePreferencesValidator</preferences-validator>
        </portlet-preferences>
    </portlet>
 </portlet-app>
